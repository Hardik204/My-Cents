@using Expense_Manager.Areas.Expenditure.Models;
@{
    ViewData["Title"] = "Expenditure Form";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model ExpenditureModel

<section class="section">
    <div class="row">
        <div class="col-lg-6
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Enter the details of Expenditure :</h5>

<form method="post" asp-area="Expenditure" asp-controller="Expenditure" asp-action="Save">
    @Html.HiddenFor(x=>x.Expenditure_Id)
    <div class="row mb-3">
        <label for="Expendiure_Name" class="col-sm-2 col-form-label">Enter Expenditure Name :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Expenditure_Name">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary">Submit</input>
        </div>
    </div>
</form>


