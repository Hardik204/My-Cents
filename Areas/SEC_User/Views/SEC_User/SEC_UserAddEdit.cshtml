@using Expense_Manager.Areas.SEC_User.Models;
@using Expense_Manager.BAL;
@{
    ViewData["Title"] = "Change User Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model SEC_UserModel

<div class="text-center">
    <img src="@Url.Content(CV.AvatarLocation())" alt="@CV.Username()" class="img-fluid rounded-circle" width="250" height="250" />
    <p style="padding:30px">
    <a class="btn btn-primary" asp-area="SEC_User" asp-controller="SEC_User" asp-action="AvatarSelect">Change Avatar</a>
    </p>
</div>

<form class="col-7" style="margin:auto" method="post" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Save" >
    @Html.HiddenFor(x=>x.User_Id)

    <div class="row mb-3">
            <label for="Username" class="col-sm-2 col-form-label">Username :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Username">
            </div>
    </div>

    <div class="row mb-3">
        <label for="First_Name" class="col-sm-2 col-form-label">First Name :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="First_Name">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Last_Name" class="col-sm-2 col-form-label">Last Name :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Last_Name">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Email" class="col-sm-2 col-form-label">Enter Email : :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Email">
        </div>
    </div>

    <div class="row mb-3">
        <label for="ContactNumber" class="col-sm-2 col-form-label">Enter Contact Number :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ContactNumber">
        </div>
    </div>

    <div style="margin:auto">
        <a class="btn btn-danger" asp-area="Logbooks" asp-controller="Logbooks" asp-action="Index">Cancel</a>
        <input class="btn btn-primary" type="submit"  />
    </div>
</form>