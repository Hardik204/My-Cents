@{
    ViewData["Title"] = "Log Form";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using System.Data;

<h1 class="text-center">Select your Emoji</h1>

<div class="row"> 
@foreach(DataRow dr in Model.Rows)
{
    <div class="text-center col-3 mt-6">
        <a asp-area="SEC_User" asp-controller="SEC_User" asp-action="SetAvatar" asp-route-Photo_Id="@Convert.ToInt32(dr["Photo_Id"].ToString())">
            <img src="@Url.Content(dr["Location"].ToString())" class="img-fluid rounded-circle" width="132" height="132" />
        </a>
    </div>
}
</div>

