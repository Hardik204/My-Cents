<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1>My Cents</h1>
            </a>

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index" class="active">Home</a></li>
                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>

                    @if(@CV.User_Id() != null)
                    {
                        <li class="dropdown dropdown-quick-sidebar-toggler">
                            <a href="@Url.Action("Logout", "SEC_User", new {Area = "SEC_User"})" class="dropdown-toggle">
                                <img src="~/images/icons8-logout-32.png">
                            </a>
                        </li>
                    }
                    else{
                        <li>
                            <a asp-area="SEC_User" asp-controller="SEC_User" asp-action="Index">Login / SignUp</a>
                        </li>
                    }
                    
                </ul>
            </nav><!-- .navbar -->
        </div>
       
    <!-- End Header -->
        
    </header>
    <!-- Body -->

    <div class="container" style="padding:8%; display:grid; grid-template-rows: auto 1fr auto;">
        <main role="main content-wrapper" class="p-3" id="main">
            @RenderBody()
        </main>
    </div>
    <!-- End Body ->

